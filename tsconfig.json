{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "typeRoots": ["src/@types", "node_module/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}